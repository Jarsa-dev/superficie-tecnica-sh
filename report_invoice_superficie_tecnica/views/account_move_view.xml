<odoo>
    <record id="view_account_move_form_superficie" model="ir.ui.view">
        <field name="name">account.move.form.superficie</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]/field/tree/field[@name='tax_ids']" position="after">
                <field name="raw_material"/>
                <field name="value_added"/>
            </xpath>
            <xpath expr="//page[2]/field/tree/field[@name='tax_ids']" position="after">
                <field name="raw_material" invisible="1"/>
                <field name="value_added" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>